<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs') %>

<body class="min-h-screen flex items-center justify-center bg-gray-900 text-gray-900" 
      style="background-image: url('https://images.unsplash.com/photo-1600585154340-be6161a56a0c'); background-size: cover; background-position: center;">
  
  <!-- Overlay for dim effect -->
  <div class="absolute inset-0 bg-black bg-opacity-50"></div>

  <!-- Form Card -->
  <main class="relative z-10 w-full max-w-lg bg-white/80 backdrop-blur-md shadow-xl rounded-xl p-8">
    <h1 class="text-2xl font-bold text-center text-indigo-700 mb-6">
      ğŸ  Enter Your House Details
    </h1>

    <form action="/add-home" method="post" class="space-y-4">
      <input type="text" placeholder="Enter house name" name="houseName"
             class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none">

      <input type="text" placeholder="Price" name="price"
             class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none">

      <input type="text" placeholder="Rating" name="rating"
             class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none">

      <input type="text" placeholder="Location" name="location"
             class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none">

      <input type="text" placeholder="Image URL" name="url"
             class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none">

      <button type="submit" 
              class="w-full py-2 bg-indigo-600 text-white rounded-lg shadow hover:bg-indigo-700 transition">
        Submit
      </button>
    </form>
  </main>
</body>
</html>
